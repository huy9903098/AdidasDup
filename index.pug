                div.component-wrapper(data-anchor-id="4")
                    section.cleanocean
                        div.cleanocean__wallpaper
                            div.cleanocean__wallpaper__container
                                picture 
                                    source(media="(min-width: 960px)" srcset="https://brand.assets.adidas.com/image/upload/f_auto,q_auto,fl_lossy/enFI/Images/CLP-Parley-MH-3-d_tcm146-505803.jpg")
