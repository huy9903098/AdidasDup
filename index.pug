                                div.primeblue__content__button-container
                                        a(href="#" title="SHOP PRIMEBLUE" class="btn-text__white-theme") 
                                            span SHOP PRIMEBLUE
                                            img.arrow-icon( src="./img/Long_Arrow_Right_Black.svg")
