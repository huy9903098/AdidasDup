        script.
            $(".play-icon").click(function(){
                $("div#youtube-video").removeClass("video-is-hidden");
                $("#widget2")[0].src += "?autoplay=1";
            })

            $(".closed-video-button").click(function(){
                $("div#youtube-video").addClass("video-is-hidden");
                $('iframe').attr('src', $('iframe').attr('src'));
            })

            $(".owl-carousel").owlCarousel({
                margin: 10,
                loop: false,
                autoplayHoverPause: true,
                responsive:{
                    0:{
                        items: 3,
                        nav:false
                    },
                    900:{
                        items:4,
                        nav:false
                    },
                    1300:{
                        items:5,
                        nav:false
                    }
               
                }
            })
            
        
        
